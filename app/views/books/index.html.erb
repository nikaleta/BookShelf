<h1>Listing books</h1>

<% if @books.count > 0 %>
<table>
	<tr>
		<th>Title</th>
		<th>Author</th>
		<th>Description</th>
		<th>Publication</th>
		<th colspan="4"></th>
	</tr>
	<% @books.each do |book| %>
	<tr>
		<td><%= book.title %></td>
		<td><%= book.author.name %></td>
		<td><%= book.description %></td>
		<td><%= book.publication %></td>
		<td><p><%= link_to "Show", book_path(book) %></p></td>
    <td><p><%= link_to "Edit", edit_book_path(book) if can? :manage, book %></p></td>
    <td><p><%= link_to "Delete", book_path(book),
                          method: :delete, data: { Confirm: "Are you sure?"} if can? :destroy, book %></p></td>
    <td><p><%= link_to "New", new_book_path if can? :create, book %></p></td>
	</tr>
	<% end %>
</table>
<% else %>
  <p>No items found!</p>
<% end %>
</div>
