<h1>Listing authors</h1>

<table>
  <tr>
    <th>Name</th>
  </tr>

  <% @authors.each do |author| %>
    <tr>
      <td><%= author.name %></td>
      <td><%= link_to 'Destroy', author_path(author),
                    method: :delete, data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
</table>
