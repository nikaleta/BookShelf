<h1>Listing authors</h1>

<table>
  <tr>
    <th>Name</th>
  </tr>

  <% @authors.each do |author| %>
    <tr>
      <td><%= author.name %></td>
    </tr>
  <% end %>
</table>

<%= form_tag books_path, :method => 'get' do %>
	<p>
		<%= text_field_tag :search, params[:search] %>
		<%= submit_tag "Search", :name => nil %>
	</p>
<% end %>
